<div>
  <h1>Hola {{user}} este es el administrador de novedades</h1>

  <div class='row'>
    <h4 class='text-end pt-4 text-muted'>¿deseas cerrar sesión?
      <a href='/admin/login/logout' class='btn btn-danger'>Cerrar sesión<i
          class='fas fa-sign-out-alt mx-2'
        ></i></a></h4>
  </div>

  <div class='row mt-4'>
    <div class='col-8'>
      <h2>Lista de Novedades</h2>
    </div>
    <div class='col-4 text-end'>
      <a class='btn btn-success' href='/admin/novedades/nuevo'>Nuevo</a>
    </div>
  </div>
  <div class='row'>
    <div class='col'>
      <table class='table'>
        <thead>
          <tr>
            <th scope='col'>#</th>
            <th scope='col'>Titulo</th>
            <th scope='col'>imagen</th>
            <th class='text-end'>Acciones</th>
          </tr>
        </thead>
        <tbody>

          {{#each novedades}}
            <tr>
              <th scope='row'>{{id}}</th>
              <td>{{titulo}}</td>
              <td>{{{imagen}}}</td>
              <td class='text-end'>
                <a
                  href='/admin/novedades/edit/{{id}}'
                  class='btn btn-secondary'
                ><i class='fa fa-pencil' aria-hidden='true'></i></a>
                <a
                  href='/admin/novedades/eliminar/{{id}}'
                  class='btn btn-danger'
                ><i class='fa fa-trash' aria-hidden='true'></i></a>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>

</div>